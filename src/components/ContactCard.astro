---
import { getTranslations, getLang } from '@i18n/utils';

const lang = getLang(Astro.url);
const t = await getTranslations(lang);

const channels = [
  { label: t.contact.channels.phone, value: '+84 8566 947 66', link: 'tel:+84856694766', key: 'phone' },
  { label: t.contact.channels.zalo, value: 'zalo.me/0856694766', link: 'https://zalo.me/0856694766', key: 'zalo' },
  { label: t.contact.channels.telegram, value: '@tinnh94', link: 'https://t.me/tinnh94', key: 'telegram' },
  { label: t.contact.channels.email, value: 'tinnh.pyn@gmail.com', link: 'mailto:tinnh.pyn@gmail.com', key: 'email' }
];
---

<section id="lien-he" class="card">
  <h2 data-i18n="contact.title">{t.contact.title}</h2>
  <p data-i18n="contact.description">
    {t.contact.description}
  </p>

  <div class="channels">
    {channels.map((c) => (
      <a class="icon" href={c.link} target={c.link.startsWith('tel:') ? undefined : '_blank'} rel={c.link.startsWith('tel:') ? undefined : 'noreferrer'} data-i18n-attr={`aria-label:contact.channels.${c.key}`} data-i18n-attr-title={`title:contact.channels.${c.key}`} aria-label={c.label} title={c.label}>
        {c.link.startsWith('tel:') && (
          <span class="glyph"><svg viewBox="0 0 24 24" aria-hidden="true" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"><path d="M2.25 4.5c0 9.112 8.138 17.25 17.25 17.25 1.243 0 2.25-1.007 2.25-2.25v-2.1c0-.77-.578-1.416-1.344-1.495l-3.313-.331a1.5 1.5 0 0 0-1.05.3l-1.2.9a12.06 12.06 0 0 1-5.4-5.4l.9-1.2c.27-.36.4-.81.35-1.26l-.33-3.3A1.5 1.5 0 0 0 8.1 3.594h-2.1A2.25 2.25 0 0 0 3.75 5.844v.406"/></svg></span>
        )}
        {c.link.includes('zalo.me') && (
          <span class="glyph"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M4 5a3 3 0 0 1 3-3h10a3 3 0 0 1 3 3v8a3 3 0 0 1-3 3h-7l-4 4v-4H7a3 3 0 0 1-3-3V5Z"/><path d="M9 8h6l-6 6h6"/></svg></span>
        )}
        {c.link.includes('t.me') && (
          <span class="glyph"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M22 2 2 12l7 2 2 7 11-19Z"/><path d="M9 12 22 2M9 12l3 3"/></svg></span>
        )}
        {c.link.startsWith('mailto:') && (
          <span class="glyph"><svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><rect x="3" y="6" width="18" height="12" rx="2"/><path d="m3 7 9 6 9-6"/></svg></span>
        )}
        <span class="label" data-i18n={`contact.channels.${c.key}`}>{c.label}</span>
      </a>
    ))}
  </div>
</section>

<style>
  .card {
    margin-top: 0 !important;
    padding: 2rem;
    border-radius: 24px;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.08), rgba(14, 165, 233, 0.08));
    border: none;
    width: 100%;
    max-width: 100%;
    margin-left: 0;
    margin-right: 0;
    min-height: 100vh;
    height: auto;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: stretch;
    opacity: 1 !important;
    visibility: visible !important;
  }

  h2 {
    margin-top: 0;
    font-size: clamp(2rem, 4vw, 2.6rem);
    position: relative;
  }
  h2::after {
    content: '';
    display: block;
    width: 56px;
    height: 4px;
    border-radius: 999px;
    background: var(--accent);
    margin-top: 0.5rem;
  }

  p {
    color: var(--muted);
    font-size: 1.05rem;
    line-height: 1.7;
  }

  .channels { margin-top: 2rem; display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr)); gap: 1rem; }

  a.icon { padding: 0.9rem 1rem; border-radius: 16px; border: none; background: var(--surface-weak); display: grid; grid-template-columns: 40% 60%; align-items: center; gap: 0.5rem; text-decoration: none; color: var(--text); transition: transform 150ms ease, box-shadow 150ms ease, border-color 150ms ease; }
  a.icon:hover { transform: translateY(-2px); box-shadow: none; border-color: var(--accent); }
  a.icon .glyph { display: inline-flex; align-items: center; justify-content: center; }
  a.icon .glyph svg { width: 24px; height: 24px; color: var(--accent); }
  a.icon .label { font-size: 0.95rem; color: var(--muted); letter-spacing: .02em; text-align: left; }
  /* circular backdrop to ensure visual padding around strokes */
  .glyph { width: 40px; height: 40px; padding: 6px; border-radius: 50%; background: rgba(14,165,233,.10); border: none; box-sizing: border-box; }

  @media (max-width: 640px) {
    .card {
      padding: 1.25rem;
      border-radius: 18px;
    }

    .channels {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }
  }
</style>
