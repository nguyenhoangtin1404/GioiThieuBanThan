---
const profile = {
  name: 'Nguyễn Hoàng Tín',
  role: 'Full‑Stack Developer',
  location: 'Đắk Lắk, Việt Nam',
  focus: 'C# • Java • Python • Angular • Microservices',
  summary: `Phát triển các hệ thống khách hàng doanh nghiệp (hóa đơn, biên lai điện tử), quản lý chính quyền (phòng họp không giấy, dịch vụ hành chính công, quản lý văn bản–điều hành), cùng với giải pháp quản lý bệnh viện và PMS theo dõi hiệu năng cell/trạm viễn thông VNPT; tập trung mở rộng tính năng, tối ưu báo cáo–thống kê, tích hợp liên thông hệ thống, đồng thời triển khai website WordPress theo yêu cầu.`,
  cvLink: 'https://tinnh.com/docs/nguyenhoangtin-cv.pdf'
};

const stats = [
  { label: 'Năm kinh nghiệm', value: '8+' },
  { label: 'Dự án tham gia', value: '12+' },
  { label: 'Tính năng/tháng', value: '6–10' }
];

const highlights = [
  'Microservices ký số, tích hợp PKI/HSM',
  'Angular frontend; C#/.NET & Java Spring; Python (Django/FastAPI)',
  'Tối ưu báo cáo thống kê & tích hợp hệ thống',
  'Triển khai website WordPress theo yêu cầu'
];
---

<section class="hero" id="gioi-thieu">
  <div class="intro">
    <p class="eyebrow">{profile.role}</p>
    <h1>{profile.name}</h1>
    <p class="subtitle">{profile.summary}</p>
    <ul class="meta">
      <li>{profile.location}</li>
      <li>{profile.focus}</li>
    </ul>
    <div class="actions">
      <a class="primary" href="#du-an">Xem dự án</a>
      <a class="ghost" href="#lien-he">Liên hệ</a>
    </div>
    <div class="cta-links">
      <a class="inline-link" href={profile.cvLink} target="_blank" rel="noreferrer">Tải CV PDF</a>
    </div>
  </div>
  <div class="card">
    <div class="avatar"><span class="ring"><img src="/avatar.png" width="260" height="260" alt={`Ảnh hồ sơ của ${profile.name}`} loading="lazy" /></span></div>
    <div class="badge">Freelance & tư vấn kỹ thuật</div>
    <div class="bio">
      {highlights.map((item) => (
        <p>{item}</p>
      ))}
    </div>
    <div class="stats">
      {stats.map((stat) => (
        <div class="stat">
          <p class="value">{stat.value}</p>
          <p class="label">{stat.label}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .hero { display: grid; gap: 2rem; grid-template-columns: 1fr; align-items: start; grid-template-areas: 'intro' 'card'; }

  .intro .eyebrow { letter-spacing: 0.15em; text-transform: uppercase; color: var(--muted); margin-bottom: 0.5rem; font-size: 0.85rem; }
  .intro h1 { font-size: clamp(2.5rem, 6vw, 4rem); margin: 0 0 1rem; }
  .subtitle { color: var(--muted); font-size: 1.1rem; line-height: 1.7; margin-bottom: 1.5rem; white-space: pre-line; }

  .meta { list-style: none; padding: 0; margin: 0 0 1.5rem; display: flex; gap: 1.25rem; flex-wrap: wrap; color: var(--muted); font-size: 0.95rem; }
  .meta li::before { content: ''; width: 6px; height: 6px; border-radius: 999px; background: rgba(14, 165, 233, 0.6); display: inline-block; margin-right: 0.4rem; vertical-align: middle; }

  .actions { display: flex; gap: 1rem; flex-wrap: wrap; margin-bottom: 0.75rem; }
  .actions a { padding: 0.85rem 1.75rem; border-radius: 999px; font-weight: 600; border: 1px solid transparent; transition: transform 150ms ease, background 150ms ease; text-decoration: none; }
  .actions a:hover { transform: translateY(-2px); }
  .primary { background: linear-gradient(135deg, var(--accent), #6366f1); color: #010409; box-shadow: var(--shadow-sm); }
  .primary:hover { filter: brightness(0.97); box-shadow: var(--shadow-md); }
  .ghost { border-color: var(--border); background: var(--surface-weak); color: var(--text); border-width: 1px; border-style: solid; }
  .ghost:hover { background: rgba(14,165,233,.08); border-color: var(--accent); }

  .card { background: var(--card); border: 1px solid var(--border); border-radius: var(--radius-lg); padding: 2rem; text-align: center; backdrop-filter: blur(20px); display: flex; flex-direction: column; align-items: center; box-shadow: var(--shadow-sm); }
  .card { grid-area: card; }
  .intro { grid-area: intro; }

  /* Avatar with perfect gradient ring */
  .avatar { width: 260px; height: 260px; border-radius: 50%; display: inline-grid; place-items: center; border: 4px solid transparent; background: linear-gradient(var(--card), var(--card)) padding-box, linear-gradient(135deg, var(--accent), #6366f1) border-box; background-clip: padding-box, border-box; box-shadow: 0 10px 28px rgba(14, 165, 233, 0.28), var(--shadow-sm); transition: transform 200ms ease, box-shadow 200ms ease; margin-bottom: 1rem; box-sizing: border-box; }
  .avatar .ring { width: 100%; height: 100%; border-radius: 50%; overflow: hidden; display: grid; place-items: center; }
  .avatar img { width: 100%; height: 100%; border-radius: 50%; display: block; border: 0; object-fit: cover; object-position: 50% 50%; box-shadow: none; margin: 0; }
  .avatar:hover { transform: translateY(-2px); box-shadow: 0 14px 36px rgba(14,165,233,.35), var(--shadow-md); }

  .badge { display: inline-flex; padding: 0.4rem 1rem; border-radius: 999px; background: rgba(14, 165, 233, 0.15); color: var(--accent); font-weight: 600; font-size: 0.9rem; margin-bottom: 1rem; }

  .bio { text-align: left; background: var(--surface-weak); border-radius: 16px; padding: 1rem; border: 1px solid var(--border); margin-bottom: 1.5rem; }
  .bio p { margin: 0 0 0.5rem; color: var(--muted); font-size: 0.95rem; line-height: 1.5; }
  .bio p:last-child { margin-bottom: 0; }

  .stats { display: grid; gap: 1rem; grid-template-columns: repeat(3, minmax(0, 1fr)); margin-top: 1.5rem; }
  .stat { background: var(--surface-softer); padding: 1rem; border-radius: 16px; border: 1px solid var(--border); }
  .value { font-size: 1.35rem; font-weight: 600; margin: 0 0 0.35rem; }
  .label { margin: 0; color: var(--muted); font-size: 0.9rem; }

  @media (max-width: 600px) {
    .stats { grid-template-columns: 1fr; }
    .cta-links { flex-wrap: wrap; justify-content: flex-start; }
  }

  /* Swap positions on wider screens: card left, intro right */
  @media (min-width: 768px) {
    .hero { grid-template-columns: 1fr 1fr; grid-template-areas: 'card intro'; }
  }
</style>

