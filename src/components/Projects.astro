---
export interface Props {
  projectIndex?: number;
  sectionId?: string;
  title?: string;
}

const {
  projectIndex = 0,
  sectionId = 'du-an',
  title = 'Dự án'
} = Astro.props;

const projects = [
  {
    name: 'Hệ thống Thông tin Giải quyết Thủ tục Hành chính',
    period: '2025 – NAY',
    description:
      'Nền tảng dịch vụ công quy mô tỉnh trên kiến trúc microservices, tích hợp Cổng DVCQG.',
    role: 'Fullstack Developer',
    tasks: [
      'Tối ưu báo cáo và hỗ trợ vận hành hệ thống.',
      'Hướng dẫn cán bộ, xử lý sự cố trong giai đoạn chuyển đổi mô hình chính quyền 02 cấp.'
    ],
    impact: 'Tối ưu thời gian lấy dữ liệu báo cáo từ 3 phút xuống 60 giây.',
    tools: [
      'Angular',
      'Java Spring Boot',
      'MongoDB',
      'Microservices'
    ],
    gallery: [
      '/igate1.jpg',
      '/igate2.jpg',
      '/igate3.png'
    ]
  },
  {
    name: 'VNPT eCabinet - Phòng họp không giấy tờ',
    period: '2021 – 2025',
    description:
      'Giải pháp phòng họp không giấy cấp tỉnh, tích hợp phần cứng IoT với phần mềm quản lý.',
    role: 'Trưởng nhóm triển khai',
    tasks: [
      'Triển khai và vận hành hệ thống (phần cứng + phần mềm).',
      'Điều phối nhóm 5 kỹ thuật viên, setup 1–2 kỳ họp/tháng.',
      'Hỗ trợ kỹ thuật tại hiện trường, đảm bảo hệ thống hoạt động ổn định.'
    ],
    impact: 'Đảm bảo các kỳ họp HĐND ổn định, không sự cố CNTT trong 5 năm. Duy trì hợp đồng dịch vụ dài hạn cấp tỉnh.',
    tools: [
      'C#',
      '.NET Framework',
      'Oracle',
      'IoT'
    ],
    gallery: [
      '/ecabinet1.jpg',
      '/ecabinet2.jpg',
      '/ecabinet3.jpg'
    ]
  },
  {
    name: 'VNPT iOffice - Điều hành Văn bản',
    period: '2017 – 2024',
    description:
      'Hệ thống quản lý và điều hành văn bản quy mô lớn, tích hợp quản lý và cộng tác nội bộ.',
    role: 'Fullstack Developer',
    impact: 'Tăng hiệu suất quản lý cho 10.000+ cán bộ. Phát triển và nâng cấp các chức năng core.',
    tools: [
      'ASP.NET',
      'C#',
      'DevExpress',
      'Oracle'
    ],
    gallery: [
      '/ioffice1.jpg',
      '/ioffice2.jpg',
      '/ioffice3.jpg'
    ]
  }
];

const project = projects[projectIndex] ?? projects[0];
---

<section id={sectionId} class="projects-section">
  <div class="carousel-container">
    <div class="list" id={`projects-${sectionId}`}>
      {project && (
        <article class="project">
          <div class="main">
            <div class="head">
              <h3>{project.name}</h3>
              {project.period && <p class="period">{project.period}</p>}
              <p>{project.description}</p>
            </div>
            <div class="meta-row">
              <p><strong>Vai trò:</strong> {project.role}</p>
            </div>
            <div class="tools-section">
              <strong>Công nghệ:</strong>
              <ul class="tools">
                {project.tools.map((tag) => (
                  <li>{tag}</li>
                ))}
              </ul>
            </div>
            {project.tasks && project.tasks.length > 0 && (
              <div class="tasks">
                <strong>Nhiệm vụ:</strong>
                <ul class="task-list">
                  {project.tasks.map((task) => (
                    <li>{task}</li>
                  ))}
                </ul>
              </div>
            )}
            {project.impact && (
              <div class="results">
                <strong>Kết quả:</strong>
                <p class="impact">{project.impact}</p>
              </div>
            )}
          </div>
          <div class="side">
            {project.gallery && project.gallery.length > 0 && (
              <div class="gallery" role="region" aria-label={`Slide h?nh ?nh cho ${project.name}`}>
                {project.gallery.map((image, index) => (
                  <figure>
                    <a href={image} class="glightbox" data-gallery={`gallery-${project.name.replace(/\s+/g, '-').toLowerCase()}`}>
                      <img src={image} alt={`Slide ${index + 1} c?a ${project.name}`} loading="lazy" />
                    </a>
                  </figure>
                ))}
              </div>
            )}
          </div>
        </article>
      )}
    </div>
  </div>
</section>

<script is:inline>
  // Load GLightbox CSS
  if (!document.querySelector('link[href*="glightbox"]')) {
    const link = document.createElement('link');
    link.rel = 'stylesheet';
    link.href = 'https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css';
    document.head.appendChild(link);
  }

  // Load GLightbox JS
  if (!document.querySelector('script[src*="glightbox"]')) {
    const script = document.createElement('script');
    script.src = 'https://cdn.jsdelivr.net/npm/glightbox/dist/js/glightbox.min.js';
    script.onload = function() {
      if (typeof GLightbox !== 'undefined') {
        const lightbox = GLightbox({
          selector: '.glightbox',
          touchNavigation: true,
          loop: true,
          autoplayVideos: true
        });
      }
    };
    document.head.appendChild(script);
  }
</script>

<style>
  .projects-section {
    margin-top: 0 !important;
    width: 100%;
    max-width: 100%;
    margin-left: 0;
    margin-right: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: stretch;
    overflow-y: visible;
    min-height: 100vh;
    height: auto;
    opacity: 1 !important;
    visibility: visible !important;
  }

  header .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--muted);
    font-size: 0.8rem;
    margin-bottom: 0.25rem;
  }

  header h2 {
    margin-top: 0;
    font-size: clamp(2rem, 4vw, 2.8rem);
    position: relative;
  }

  header h2::after {
    content: '';
    display: block;
    width: 56px;
    height: 4px;
    border-radius: 999px;
    background: var(--accent);
    margin-top: 0.5rem;
  }

  .carousel-container {
    position: relative;
    width: 100%;
    max-width: 100%;
    overflow: visible;
  }

  .list {
    display: block;
    width: 100%;
  }

  .project {
    position: relative;
    z-index: 1;
    padding: 1.5rem;
    border-radius: 24px;
    background: var(--card);
    border: none;
    display: grid;
    gap: 1.25rem 2rem;
    grid-template-columns: minmax(0, 1.1fr) minmax(0, 0.9fr);
    align-items: start;
    box-shadow: none;
    min-height: 100%;
    flex: 0 0 100%;
    scroll-snap-align: start;
    min-width: 0;
    width: 100%;
    max-width: 100%;
    overflow: visible;
    box-sizing: border-box;
  }

  .project .main,
  .project .side {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  @media (min-width: 640px) {
    .project {
      padding: 2rem;
    }
  }

  @media (min-width: 1024px) {
    .project {
      padding: 2.5rem;
    }
  }

  .project img {
    width: 100%;
    height: 160px;
    object-fit: cover;
    border-radius: 18px;
    border: none;
  }

  .head h3 {
    margin: 0 0 0.5rem;
    font-size: clamp(1.25rem, 4vw, 1.5rem);
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .period {
    margin: 0 0 0.5rem;
    font-size: 0.9rem;
    color: var(--muted);
    font-weight: 500;
  }

  .head p {
    margin: 0;
    color: var(--muted);
    line-height: 1.6;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  .meta-row {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .meta-row p {
    margin: 0;
    color: var(--muted);
  }

  .tasks, .results, .tools-section {
    margin-top: 1rem;
  }

  .tasks strong, .results strong, .tools-section strong {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--text);
    font-weight: 600;
    font-size: 0.95rem;
  }

  .task-list {
    list-style: disc;
    padding-left: 1.5rem;
    margin: 0.5rem 0 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .task-list li {
    color: var(--muted);
    line-height: 1.6;
    display: list-item;
    padding: 0;
    height: auto;
    min-width: auto;
    border-radius: 0;
    background: none;
    font-weight: normal;
    font-size: 0.95rem;
    white-space: normal;
  }

  .results {
    margin-top: 1rem;
  }

  .results .impact {
    margin: 0.5rem 0 0;
    color: var(--muted);
    line-height: 1.6;
    font-weight: normal;
  }

  .tools-section {
    margin-top: 1rem;
  }

  .tools {
    list-style: none;
    padding: 0;
    margin: 0.5rem 0 0;
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tools li {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    height: 40px;
    min-width: 96px;
    padding: 0 14px;
    border-radius: 999px;
    background: rgba(14, 165, 233, 0.12);
    font-size: 0.9rem;
    font-weight: 600;
    color: #075985;
    line-height: 1;
    white-space: nowrap;
  }

  .gallery {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 0.75rem;
    margin-top: 1rem;
  }

  .gallery figure {
    margin: 0;
    min-width: 0;
    border-radius: 16px;
    overflow: hidden;
    border: none;
    background: rgba(15, 23, 42, 0.6);
  }

  .gallery a {
    display: block;
    cursor: pointer;
    transition: opacity 0.2s ease;
  }

  .gallery a:hover {
    opacity: 0.9;
  }

  .gallery img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    display: block;
  }
@media (min-width: 768px) {
}

  @media (max-width: 768px) {
}
@media (max-width: 640px) {
    .project {
      grid-template-columns: 1fr;
      padding: 1rem;
      border-radius: 18px;
    }

    .meta-row {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .head h3 {
      font-size: 1.2rem;
    }

    .tools li {
      font-size: 0.85rem;
      padding: 0 12px;
      min-width: 80px;
    }

    .gallery {
      grid-template-columns: 1fr;
    }
  }

  /* .case-link removed */
</style>
