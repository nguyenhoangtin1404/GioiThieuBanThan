---
const projects = [
  {
    name: 'LumenPay',
    description: 'Ngân hàng số cho nhóm thu nhập tự do với trải nghiệm tiết kiệm linh hoạt và cảnh báo chi tiêu theo thời gian thực.',
    role: 'Lead Product Designer',
    impact: '+38% tỉ lệ active savings accounts sau 2 quý',
    tools: ['Discovery sprint', 'Design system', 'Hi-fi prototype'],
    link: 'https://tinnh.com/case-studies/lumenpay',
    cover: 'https://images.unsplash.com/photo-1489515217757-5fd1be406fef?auto=format&fit=crop&w=800&q=80'
  },
  {
    name: 'FlowCRM 2.0',
    description: 'Dashboard kéo-thả cho đội Sales B2B, đồng bộ dữ liệu pipeline và tự động gợi ý hành động ưu tiên.',
    role: 'Product Design Lead',
    impact: 'Giảm 27% thời gian onboarding và +15% win-rate',
    tools: ['Journey mapping', 'Interaction design', 'Frontend collab'],
    link: 'https://tinnh.com/case-studies/flowcrm',
    cover: 'https://images.unsplash.com/photo-1551650975-87deedd944c3?auto=format&fit=crop&w=800&q=80'
  },
  {
    name: 'CivicAid',
    description: 'Nền tảng kết nối cộng đồng và mạnh thường quân, minh bạch dòng tiền và cung cấp dashboard tác động.',
    role: 'Product Designer',
    impact: 'Huy động 150k USD trong 45 ngày, NPS +24',
    tools: ['Branding', 'Mobile UX', 'Design ops'],
    link: 'https://tinnh.com/case-studies/civicaid',
    cover: 'https://images.unsplash.com/photo-1483058712412-4245e9b90334?auto=format&fit=crop&w=800&q=80'
  }
];
---

<section id="du-an" class="section">
  <header>
    <p class="eyebrow">Case study nổi bật</p>
    <h2>Thiết kế có thể đo lường</h2>
  </header>
  <div class="list">
    {projects.map((project) => (
      <article class="project">
        <img src={project.cover} alt={`Ảnh minh hoạ dự án ${project.name}`} loading="lazy" />
        <div class="head">
          <h3>{project.name}</h3>
          <p>{project.description}</p>
        </div>
        <div class="meta-row">
          <p><strong>Vai trò:</strong> {project.role}</p>
          <p class="impact">{project.impact}</p>
        </div>
        <ul>
          {project.tools.map((tag) => (
            <li>{tag}</li>
          ))}
        </ul>
        <a class="case-link" href={project.link} target="_blank" rel="noreferrer">
          Xem case study
        </a>
      </article>
    ))}
  </div>
</section>

<style>
  .section {
    margin-top: 4rem;
  }

  header .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--muted);
    font-size: 0.8rem;
    margin-bottom: 0.25rem;
  }

  header h2 {
    margin-top: 0;
    font-size: clamp(2rem, 4vw, 2.8rem);
  }

  .list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .project {
    padding: 1.75rem;
    border-radius: 24px;
    background: rgba(4, 11, 20, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.08);
    display: grid;
    gap: 1rem;
  }

  .project img {
    width: 100%;
    height: 220px;
    object-fit: cover;
    border-radius: 18px;
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  .head h3 {
    margin: 0 0 0.5rem;
    font-size: 1.5rem;
  }

  .head p {
    margin: 0;
    color: var(--muted);
    line-height: 1.6;
  }

  .meta-row {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: space-between;
    align-items: center;
  }

  .meta-row p {
    margin: 0;
    color: var(--muted);
  }

  .impact {
    font-weight: 600;
    color: var(--accent);
  }

  ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  li {
    padding: 0.4rem 0.85rem;
    border-radius: 999px;
    background: rgba(56, 189, 248, 0.14);
    font-size: 0.85rem;
  }

  .case-link {
    display: inline-flex;
    width: fit-content;
    align-items: center;
    gap: 0.4rem;
    font-weight: 600;
    color: var(--accent);
  }
</style>
