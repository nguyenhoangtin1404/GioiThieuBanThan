---
const events = [
  {
    year: '2023 — nay',
    role: 'Senior Full‑Stack Developer @ NovaLabs',
    detail:
      'Thiết kế kiến trúc, phát triển feature end‑to‑end (React/NestJS), tối ưu hiệu năng, thiết lập CI/CD và giám sát.',
    highlights: ['Triển khai Docker + GitHub Actions', 'Giảm 30% thời gian build, 20% TTFB']
  },
  {
    year: '2020 — 2023',
    role: 'Full‑Stack Developer @ Aurora Labs',
    detail:
      'Phát triển SaaS B2B: API REST/GraphQL, RBAC, caching Redis, dashboard realtime, triển khai trên Vercel/VM.',
    highlights: ['Thiết kế schema PostgreSQL', 'Tự động hóa release hằng tuần']
  },
  {
    year: '2017 — 2020',
    role: 'Software Engineer (Frontend) @ Firefly',
    detail:
      'Xây dựng UI component library, hợp tác chặt với backend để rút ngắn thời gian bàn giao và nâng cao chất lượng.',
    highlights: ['Refactor UI theo design system', 'Mentor lập trình viên junior']
  }
];
---

<section class="section alt">
  <header>
    <p class="eyebrow">Hành trình</p>
    <h2>Kinh nghiệm nổi bật</h2>
  </header>
  <div class="timeline">
    {events.map((event) => (
      <article class="item">
        <span class="year">{event.year}</span>
        <div>
          <h3>{event.role}</h3>
          <p>{event.detail}</p>
          <ul>
            {event.highlights.map((highlight) => (
              <li>{highlight}</li>
            ))}
          </ul>
        </div>
      </article>
    ))}
  </div>
</section>

<style>
  .section {
    margin-top: 5rem;
  }
  .section.alt {
    background: var(--surface-weak);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 2rem;
  }

  header .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--muted);
    font-size: 0.8rem;
    margin-bottom: 0.25rem;
  }

  header h2 {
    margin-top: 0;
    font-size: clamp(2rem, 4vw, 2.8rem);
    position: relative;
  }
  header h2::after {
    content: '';
    display: block;
    width: 56px;
    height: 4px;
    border-radius: 999px;
    background: var(--accent);
    margin-top: 0.5rem;
  }

  .timeline {
    --tl-pl: 1.5rem;        /* padding-left */
    --tl-line: 2px;         /* line width */
    --tl-dot: 12px;         /* dot size (inside border) */
    --tl-dot-border: 2px;   /* dot border width */
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    border-left: var(--tl-line) solid rgba(56, 189, 248, 0.4);
    padding-left: var(--tl-pl);
    margin-left: 0.5rem;
  }

  .item {
    position: relative;
  }

  .item::before {
    content: '';
    position: absolute;
    /* center of dot aligns to center of border-left */
    left: calc(-1 * var(--tl-pl) + var(--tl-line) / 2 - (var(--tl-dot) / 2 + var(--tl-dot-border)));
    transform: none;
    top: 0.65rem;
    width: var(--tl-dot);
    height: var(--tl-dot);
    border-radius: 999px;
    border: 2px solid var(--accent);
    background: var(--bg);
  }

  .year {
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--muted);
  }

  h3 {
    margin: 0.2rem 0;
  }

  p {
    margin: 0;
    color: var(--muted);
    line-height: 1.6;
  }

  ul {
    list-style: disc;
    margin: 0.75rem 0 0 1.2rem;
    color: var(--muted);
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  li {
    line-height: 1.5;
  }
</style>
