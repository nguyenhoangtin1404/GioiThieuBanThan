---
import { getTranslations, getLang } from '@i18n/utils';

const lang = getLang(Astro.url);
const t = await getTranslations(lang);
const events = t.timeline.items;

// Animation delay configuration
const ANIMATION_BASE_DELAY = 0; // Base delay in milliseconds
const ANIMATION_STAGGER_DELAY = 200; // Delay increment between each item
---

<section class="timeline-section alt" data-slide-in="left">
  <header>
    <h2 class="fade-in-item" data-i18n="timeline.title" data-fade-delay="0">{t.timeline.title}</h2>
  </header>
  <div class="timeline" id="timeline-container">
    {events.map((event: any, eventIndex: number) => (
      <article 
        class="item timeline-item fade-in-item" 
        data-fade-delay={ANIMATION_BASE_DELAY + eventIndex * ANIMATION_STAGGER_DELAY}
        data-timeline-index={eventIndex}
      >
        <span class="year" data-i18n={`timeline.items.${eventIndex}.year`}>{event.year}</span>
        <div>
          <p class="company" data-i18n={`timeline.items.${eventIndex}.company`}>{event.company}</p>
          <h3 data-i18n={`timeline.items.${eventIndex}.role`}>{event.role}</h3>
          <ul class="tasks">
            {event.tasks.map((task: string, taskIndex: number) => (
              <li data-i18n={`timeline.items.${eventIndex}.tasks.${taskIndex}`}>{task}</li>
            ))}
          </ul>
          <div class="achievements">
            <strong data-i18n="timeline.achievements">{t.timeline.achievements}</strong>
            <ul>
              {event.achievements.map((achievement: string, achIndex: number) => (
                <li data-i18n={`timeline.items.${eventIndex}.achievements.${achIndex}`}>{achievement}</li>
              ))}
            </ul>
          </div>
        </div>
      </article>
    ))}
  </div>
</section>

<script is:inline>
  // Trigger timeline line animation when section becomes active or visible
  function initTimelineAnimation() {
    const timelineSection = document.querySelector('.timeline-section');
    const timeline = document.querySelector('.timeline');
    
    if (!timelineSection || !timeline) return;

    // Function to trigger animation
    function triggerLineAnimation() {
      // Reset animation by removing and re-adding class
      timeline.classList.remove('animate-line');
      // Force reflow
      void timeline.offsetWidth;
      // Add class to trigger animation
      timeline.classList.add('animate-line');
    }

    // Check if section is already active
    const parentSection = timelineSection.closest('.section');
    if (parentSection && parentSection.classList.contains('active')) {
      setTimeout(triggerLineAnimation, 100);
    }

    // Watch for section becoming active (for desktop fullpage)
    if (parentSection) {
      const observer = new MutationObserver((mutations) => {
        mutations.forEach((mutation) => {
          if (mutation.type === 'attributes' && mutation.attributeName === 'class') {
            if (parentSection.classList.contains('active')) {
              triggerLineAnimation();
            }
          }
        });
      });

      observer.observe(parentSection, {
        attributes: true,
        attributeFilter: ['class']
      });
    }

    // Also trigger on scroll for mobile (using Intersection Observer)
    const sectionObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting && entry.intersectionRatio > 0.3) {
          triggerLineAnimation();
          sectionObserver.unobserve(entry.target);
        }
      });
    }, {
      threshold: 0.3,
      rootMargin: '0px'
    });

    sectionObserver.observe(timelineSection);
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTimelineAnimation);
  } else {
    setTimeout(initTimelineAnimation, 100);
  }
</script>

<style>
  .timeline-section {
    margin-top: 0 !important;
    width: 100%;
    max-width: 100%;
    margin-left: 0;
    margin-right: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: stretch;
    overflow-y: visible;
    min-height: 100vh;
    height: auto;
    visibility: visible !important;
  }
  .timeline-section.alt {
    background: var(--surface-weak);
    border: none;
    border-radius: var(--radius-lg);
    padding: 2rem;
  }

  header .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--muted);
    font-size: 0.8rem;
    margin-bottom: 0.25rem;
  }

  header h2 {
    margin-top: 0;
    font-size: clamp(2rem, 4vw, 2.8rem);
    position: relative;
  }
  header h2::after {
    content: '';
    display: block;
    width: 56px;
    height: 4px;
    border-radius: 999px;
    background: var(--accent);
    margin-top: 0.5rem;
  }

  .timeline {
    --tl-pl: 1.5rem;        /* padding-left */
    --tl-line: 2px;         /* line width */
    --tl-dot: 12px;         /* dot size (inside border) */
    --tl-dot-border: 2px;   /* dot border width */
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    border-left: var(--tl-line) solid rgba(56, 189, 248, 0.2);
    padding-left: var(--tl-pl);
    margin-left: 0.5rem;
    position: relative;
  }

  /* Timeline line drawing animation */
  .timeline::after {
    content: '';
    position: absolute;
    left: calc(-1 * var(--tl-line));
    top: 0;
    width: var(--tl-line);
    height: 0;
    background: var(--accent);
    z-index: 1;
    animation: none;
  }

  /* Trigger animation when section is active or timeline section is visible */
  .section.active .timeline::after,
  .timeline.animate-line::after {
    animation: drawLine 1.5s ease-out forwards;
  }

  @keyframes drawLine {
    from {
      height: 0;
    }
    to {
      height: 100%;
    }
  }

  .item {
    position: relative;
  }

  /* Initial state - will be overridden by .fade-in-item from BaseLayout */
  .item.fade-in-item {
    opacity: 0 !important;
    transform: translateX(100px) !important;
    transition: opacity 2s cubic-bezier(0.4, 0, 0.2, 1),
                transform 2s cubic-bezier(0.4, 0, 0.2, 1) !important;
    will-change: opacity, transform;
  }

  .item.fade-in-item.fade-in-visible {
    opacity: 1 !important;
    transform: translateX(0) !important;
  }

  .item::before {
    content: '';
    position: absolute;
    /* Triangle marker - point at timeline line, pointing right */
    left: calc(-1 * var(--tl-pl));
    transform: scale(0);
    top: 0.65rem;
    width: 14px;
    height: 14px;
    clip-path: polygon(0 50%, 100% 0, 100% 100%);
    background: var(--accent);
    z-index: 2;
    transition: transform 0.6s cubic-bezier(0.34, 1.56, 0.64, 1),
                box-shadow 0.6s ease-out;
    box-shadow: 0 0 0 0 rgba(14, 165, 233, 0);
  }

  /* Marker pulse animation when item becomes visible */
  .item.fade-in-visible::before {
    transform: scale(1);
    animation: markerPulse 0.6s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  }

  @keyframes markerPulse {
    0% {
      transform: scale(0);
      box-shadow: 0 0 0 0 rgba(14, 165, 233, 0.7);
    }
    50% {
      transform: scale(1.2);
      box-shadow: 0 0 0 8px rgba(14, 165, 233, 0);
    }
    100% {
      transform: scale(1);
      box-shadow: 0 0 0 0 rgba(14, 165, 233, 0);
    }
  }

  .year {
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--muted);
  }

  .company {
    margin: 0 0 0.5rem;
    font-weight: 600;
    color: var(--text);
    font-size: 1rem;
  }

  h3 {
    margin: 0.2rem 0 1rem;
    font-size: 1.1rem;
  }

  p {
    margin: 0;
    color: var(--muted);
    line-height: 1.6;
  }

  ul {
    list-style: disc;
    margin: 0.75rem 0 0 1.2rem;
    color: var(--muted);
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .tasks {
    margin-bottom: 1.5rem;
  }

  li {
    line-height: 1.6;
  }

  .achievements {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  .achievements strong {
    display: block;
    margin-bottom: 0.75rem;
    color: var(--text);
    font-weight: 600;
  }

  .achievements ul {
    margin-top: 0.5rem;
  }

  @media (max-width: 640px) {
    .timeline-section {
      padding: 0 1rem;
    }

    .timeline-section.alt {
      padding: 1.25rem;
      border-radius: 18px;
    }

    .timeline {
      gap: 1.25rem;
      padding-left: 1rem;
      margin-left: 0;
    }
  }
</style>
