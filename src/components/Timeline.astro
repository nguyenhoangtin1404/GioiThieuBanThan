---
const events = [
  {
    year: '2022 — nay',
    role: 'Senior Product Designer · NovaLabs',
    detail: 'Quản lý vision UX cho bộ sản phẩm fintech, đồng thiết kế cùng PM & Engineer để ship release hàng tháng.',
    highlights: ['Xây dựng NovaOS design system 60+ components', 'Facilitator 8 discovery sprint liên phòng ban']
  },
  {
    year: '2020 — 2022',
    role: 'Product Designer · Aurora Labs',
    detail: 'Tập trung các sản phẩm SaaS phân tích dữ liệu, kết nối đội Data với Product để ưu tiên roadmap.',
    highlights: ['Triển khai KPI UX chung giúp giảm 24% churn', 'Đồng tác giả guideline accessibility nội bộ']
  },
  {
    year: '2017 — 2020',
    role: 'UX Engineer · Firefly',
    detail: 'Vừa thiết kế UI vừa build component React giúp rút ngắn thời gian bàn giao cho đội front-end.',
    highlights: ['Mentor 4 designer trẻ', 'Giải thưởng “Rising Talent 2019” của công ty']
  }
];
---

<section class="section">
  <header>
    <p class="eyebrow">Hành trình</p>
    <h2>Những cột mốc chính</h2>
  </header>
  <div class="timeline">
    {events.map((event) => (
      <article class="item">
        <span class="year">{event.year}</span>
        <div>
          <h3>{event.role}</h3>
          <p>{event.detail}</p>
          <ul>
            {event.highlights.map((highlight) => (
              <li>{highlight}</li>
            ))}
          </ul>
        </div>
      </article>
    ))}
  </div>
</section>

<style>
  .section {
    margin-top: 4rem;
  }

  header .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--muted);
    font-size: 0.8rem;
    margin-bottom: 0.25rem;
  }

  header h2 {
    margin-top: 0;
    font-size: clamp(2rem, 4vw, 2.8rem);
  }

  .timeline {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    border-left: 2px solid rgba(56, 189, 248, 0.4);
    padding-left: 1.5rem;
    margin-left: 0.5rem;
  }

  .item {
    position: relative;
  }

  .item::before {
    content: '';
    position: absolute;
    left: -1.7rem;
    top: 0.7rem;
    width: 12px;
    height: 12px;
    border-radius: 999px;
    border: 2px solid var(--accent);
    background: #040b14;
  }

  .year {
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--muted);
  }

  h3 {
    margin: 0.2rem 0;
  }

  p {
    margin: 0;
    color: var(--muted);
    line-height: 1.6;
  }

  ul {
    list-style: disc;
    margin: 0.75rem 0 0 1.2rem;
    color: var(--muted);
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
  }

  li {
    line-height: 1.5;
  }
</style>
