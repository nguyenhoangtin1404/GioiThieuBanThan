---
import { getTranslations, getLang } from '@i18n/utils';

const lang = getLang();
const t = await getTranslations(lang);
const events = t.timeline.items;
---

<section class="timeline-section alt">
  <header>
    <h2 data-i18n="timeline.title">{t.timeline.title}</h2>
  </header>
  <div class="timeline">
    {events.map((event, eventIndex) => (
      <article class="item">
        <span class="year" data-i18n={`timeline.items.${eventIndex}.year`}>{event.year}</span>
        <div>
          <p class="company" data-i18n={`timeline.items.${eventIndex}.company`}>{event.company}</p>
          <h3 data-i18n={`timeline.items.${eventIndex}.role`}>{event.role}</h3>
          <ul class="tasks">
            {event.tasks.map((task, taskIndex) => (
              <li key={taskIndex} data-i18n={`timeline.items.${eventIndex}.tasks.${taskIndex}`}>{task}</li>
            ))}
          </ul>
          <div class="achievements">
            <strong data-i18n="timeline.achievements">{t.timeline.achievements}</strong>
            <ul>
              {event.achievements.map((achievement, achIndex) => (
                <li key={achIndex} data-i18n={`timeline.items.${eventIndex}.achievements.${achIndex}`}>{achievement}</li>
              ))}
            </ul>
          </div>
        </div>
      </article>
    ))}
  </div>
</section>

<style>
  .timeline-section {
    margin-top: 0 !important;
    width: 100%;
    max-width: 100%;
    margin-left: 0;
    margin-right: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: stretch;
    overflow-y: visible;
    min-height: 100vh;
    height: auto;
    opacity: 1 !important;
    visibility: visible !important;
  }
  .timeline-section.alt {
    background: var(--surface-weak);
    border: none;
    border-radius: var(--radius-lg);
    padding: 2rem;
  }

  header .eyebrow {
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--muted);
    font-size: 0.8rem;
    margin-bottom: 0.25rem;
  }

  header h2 {
    margin-top: 0;
    font-size: clamp(2rem, 4vw, 2.8rem);
    position: relative;
  }
  header h2::after {
    content: '';
    display: block;
    width: 56px;
    height: 4px;
    border-radius: 999px;
    background: var(--accent);
    margin-top: 0.5rem;
  }

  .timeline {
    --tl-pl: 1.5rem;        /* padding-left */
    --tl-line: 2px;         /* line width */
    --tl-dot: 12px;         /* dot size (inside border) */
    --tl-dot-border: 2px;   /* dot border width */
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    border-left: var(--tl-line) solid rgba(56, 189, 248, 0.4);
    padding-left: var(--tl-pl);
    margin-left: 0.5rem;
  }

  .item {
    position: relative;
  }

  .item::before {
    content: '';
    position: absolute;
    /* center of dot aligns to center of border-left */
    left: calc(-1 * var(--tl-pl) + var(--tl-line) / 2 - (var(--tl-dot) / 2 + var(--tl-dot-border)));
    transform: none;
    top: 0.65rem;
    width: var(--tl-dot);
    height: var(--tl-dot);
    border-radius: 999px;
    border: 2px solid var(--accent);
    background: var(--bg);
  }

  .year {
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--muted);
  }

  .company {
    margin: 0 0 0.5rem;
    font-weight: 600;
    color: var(--text);
    font-size: 1rem;
  }

  h3 {
    margin: 0.2rem 0 1rem;
    font-size: 1.1rem;
  }

  p {
    margin: 0;
    color: var(--muted);
    line-height: 1.6;
  }

  ul {
    list-style: disc;
    margin: 0.75rem 0 0 1.2rem;
    color: var(--muted);
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .tasks {
    margin-bottom: 1.5rem;
  }

  li {
    line-height: 1.6;
  }

  .achievements {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  .achievements strong {
    display: block;
    margin-bottom: 0.75rem;
    color: var(--text);
    font-weight: 600;
  }

  .achievements ul {
    margin-top: 0.5rem;
  }

  @media (max-width: 640px) {
    .timeline-section {
      padding: 0 1rem;
    }

    .timeline-section.alt {
      padding: 1.25rem;
      border-radius: 18px;
    }

    .timeline {
      gap: 1.25rem;
      padding-left: 1rem;
      margin-left: 0;
    }
  }
</style>
