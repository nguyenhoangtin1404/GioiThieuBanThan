---
export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Nguyễn Hoàng Tín — Senior Product Designer',
  description = 'Portfolio & CV online của Nguyễn Hoàng Tín, Product Designer 7+ năm tối ưu trải nghiệm số cho fintech và SaaS'
} = Astro.props;
---

<!doctype html>
<html lang="vi">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      :root {
        color-scheme: light dark;
        font-family: 'Space Grotesk', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        --bg: #040b14;
        --card: #0c1824;
        --accent: #38bdf8;
        --muted: rgba(255, 255, 255, 0.65);
        --text: #f8fafc;
      }

      body {
        margin: 0;
        background: radial-gradient(circle at top, rgba(56, 189, 248, 0.16), rgba(4, 11, 20, 1) 55%);
        min-height: 100vh;
        color: var(--text);
      }

      main {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem clamp(1rem, 4vw, 3rem) 4rem;
      }

      a {
        color: inherit;
        text-decoration: none;
      }
    </style>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
